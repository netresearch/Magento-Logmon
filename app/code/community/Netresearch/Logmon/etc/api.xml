<config>
    <api>
        <resources>
            <logmon_log translate="title" module="logmon">
                <title>Logmon API</title>
                <model>logmon/log_api</model>
                <acl>logmon/log</acl>
                <methods>
                    <list translate="title" module="logmon">
                        <title>Retrieve log list</title>
                        <method>items</method>
                        <acl>logmon/log/info</acl>
                    </list>
                    <info translate="title" module="logmon">
                        <title>Retrieve log entry</title>
                        <acl>logmon/log/info</acl>
                    </info>
                    <create translate="title" module="logmon">
                        <title>Create new log entry</title>
                        <acl>logmon/log/create</acl>
                    </create>
                    <extend translate="title" module="logmon">
                        <title>Extend existing log entry</title>
                        <acl>logmon/log/extend</acl>
                    </extend>
                </methods>
            </logmon_log>
        </resources>
    </api>
</config>